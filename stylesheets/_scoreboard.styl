#scoreboard

  ol
    list-style: none
    margin: 0
    padding: 0


  li
    padding: 6px 32px
    line-height: 44px
    font-size: 120%
    transition: all 500ms ease-in-out

  li strong
    display: inline-block
    background: #444
    color: white
    padding: 6px
    width: 28px
    height: 28px
    line-height: 28px
    text-align: center
    margin: 0 12px 0 -6px
    border-radius: 32px
    border: 3px #222 solid
    transition: border 500ms ease


  .all
    color: mediumturquoise


  .all li strong
    background: mediumturquoise

